{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@xpertia/database": ["../../packages/database"],
      "@xpertia/types": ["../../packages/types"],
      "@xpertia/types/*": ["../../packages/types/*"],
      "@repo/database/*": ["../../packages/database/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../packages/database/types.ts",
    "../../packages/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
